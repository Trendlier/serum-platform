# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Rest services
POST    /login                      serum.controller.LoginController.login
GET     /users/me                   serum.controller.UsersController.me(userAuthToken: String)
GET     /users/me/friends           serum.controller.UsersController.myFriends(userAuthToken: String)
GET     /users/me/friendsToInvite   serum.controller.UsersController.myFriendsToInvite(userAuthToken: String)

# Get-the-app page
GET     /getTheApp                  serum.controller.GetTheAppController.index

# Chat client page
GET     /client                     serum.controller.ChatClientController.index

# Web socket handler(s)
GET     /threadSocket               serum.controller.ThreadSocketController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)
